{
  "name": "plasmid-manager",
  "version": "1.0.0",
  "description": "质粒管理系统桌面版",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.plasmid.manager",
    "productName": "质粒管理系统",
    "directories": {
      "output": "dist_v3"
    },
    "asar": false,
    "files": [
      "**/*",
      "!data/**/*",
      "!dist/**/*",
      "!dist_build/**/*",
      "!dist_release/**/*",
      "!dist_v2/**/*",
      "!dist_v3/**/*",
      "!electron_builder_cache/**/*",
      "!.git/**/*",
      "!.idea/**/*",
      "!.vscode/**/*"
    ],
    "win": {
      "target": [
        "dir"
      ],
      "forceCodeSigning": false,
      "icon": "icon.ico",
      "signtoolOptions": {
        "sign": null
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
